<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Light" parent="Base.Theme.Light" />

    <style name="Theme.Light.Inverse.Amber" parent="Base.Theme.Light.Inverse.Amber" />

    <style name="Theme.Light.Inverse.Green" parent="Base.Theme.Light.Inverse.Green" />

    <style name="Theme.Light.Inverse.LightBlue" parent="Base.Theme.Light.Inverse.LightBlue" />

    <style name="Theme.Light.Inverse.Purple" parent="Base.Theme.Light.Inverse.Purple" />

    <style name="Theme.Dark" parent="Base.Theme.Dark" />

    <style name="Theme.Dark.NightMode" parent="Base.Theme.Dark.NightMode" />

    <style name="Theme.Dark.NightMode.Amoled" parent="Base.Theme.Dark.NightMode.Amoled" />

    <style name="Theme.Translucent.Light" parent="Base.Theme.Translucent.Light" />

    <style name="Theme.Translucent.Dark" parent="Base.Theme.Translucent.Dark" />

    <style name="Theme.Gallery" parent="Base.Theme.Gallery" />

    <style name="Base.Theme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- disable window preview in order to avoid the undelightful color transitions
        when app starts-->
        <item name="android:windowDisablePreview">true</item>
        <!-- show contextual action bar -->
        <item name="windowActionModeOverlay">true</item>

        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorPrimaryDark">@color/light_status_bar</item>
        <item name="colorPrimary">@color/light_app_bar</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="navigationViewTheme">@style/Theme.Light.NavigationView</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="cardViewContainerBackground">@color/light_card_view_container</item>

        <item name="drawerTextColor">?android:attr/textColorPrimaryInverse</item>
        <item name="fabBackgroundTint">?attr/colorAccent</item>
        <item name="emoticonKeyboardTabLayoutBackground">@color/light_emoticon_keyboard_tab_layout_background</item>
        <item name="emoticonKeyboardBackground">@color/light_emoticon_keyboard_background</item>

        <item name="iconMenuPageJump">@drawable/selector_menu_swap_horiz</item>
        <item name="iconMenuSend">@drawable/selector_menu_send</item>
    </style>

    <style name="Base.Theme.Light.Inverse">
        <!-- https://code.google.com/p/android/issues/detail?id=169657 -->
        <item name="actionBarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="navigationViewTheme">?attr/theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="fabBackgroundTint">?attr/colorPrimary</item>
        <item name="iconMenuPageJump">@drawable/selector_menu_swap_horiz</item>
        <item name="iconMenuSend">@drawable/selector_menu_send</item>
    </style>

    <style name="Base.Theme.Light.Inverse.Amber">
        <item name="colorPrimaryDark">@color/amber_700</item>
        <item name="colorPrimary">@color/amber_500</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="Base.Theme.Light.Inverse.Green">
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorAccent">@color/deep_orange_A200</item>
    </style>

    <style name="Base.Theme.Light.Inverse.LightBlue">
        <item name="colorPrimaryDark">@color/light_blue_700</item>
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="colorAccent">@color/pink_A200</item>
    </style>

    <style name="Base.Theme.Light.Inverse.Purple">
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorAccent">@color/pink_A200</item>
    </style>

    <style name="Base.Theme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorPrimaryDark">@color/dark_status_bar</item>
        <item name="colorPrimary">@color/dark_app_bar</item>
        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="navigationViewTheme">@style/Theme.Dark.NavigationView</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="cardViewStyle">@style/CardView.Dark</item>
        <!-- Actually the dark CardView background is not same to `android:colorBackground` which
        is inconsistent with light theme. But it looks much better. May fix this inconsistency later.-->
        <item name="cardViewContainerBackground">@color/dark_background</item>
        <item name="drawerTextColor">?android:attr/textColorPrimary</item>
        <item name="fabBackgroundTint">?attr/colorAccent</item>
        <item name="emoticonKeyboardTabLayoutBackground">@color/dark_emoticon_keyboard_tab_layout_background</item>
        <item name="emoticonKeyboardBackground">@color/dark_emoticon_keyboard_background</item>
        <item name="iconMenuPageJump">@drawable/selector_menu_swap_horiz</item>
        <item name="iconMenuSend">@drawable/selector_menu_send</item>
    </style>

    <style name="Base.Theme.Dark.NightMode">
        <item name="colorAccent">@color/dark_cyan</item>
        <item name="android:textColorPrimary">@color/white_69p</item>
        <item name="android:textColorLink">@color/teal_200_70p</item>
        <item name="navigationViewTheme">@style/Theme.Dark.NightMode.NavigationView</item>
    </style>

    <style name="Base.Theme.Dark.NightMode.Amoled">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="navigationViewTheme">@style/Theme.Dark.NightMode.Amoled.NavigationView</item>
        <item name="cardViewStyle">@style/CardView.Dark.NightMode.Amoled</item>
        <item name="cardViewContainerBackground">@android:color/black</item>
    </style>

    <style name="Base.Theme.Translucent.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- from Theme.Translucent -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Base.Theme.Translucent.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Base.Theme.Gallery" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

</resources>
