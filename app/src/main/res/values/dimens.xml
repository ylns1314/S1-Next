    <!-- According to the material design guidelines, subtitle should have 8dp top margin.
    But the font itself still has a little extra padding if we set `android:includeFontPadding`
    to false, so we adjust this dimension to 4.5dp. -->
    <dimen name="subtitle_margin_top">4.5dp</dimen>

    <!--Before L, CardView adds padding to its content and draws shadows to that area.
    This padding amount is equal to maxCardElevation + (1 - cos45) * cornerRadius on the
    sides and maxCardElevation * 1.5 + (1 - cos45) * cornerRadius on top and bottom.-->

    <!-- 8dp (CardView margin) - ((2 + (1 - cos45) * 2))dp ≈ 5.05dp -->
    <dimen name="card_view_horizontal_margin">5.05dp</dimen>
    <!-- 4dp (half of CardView margin) - (2 * 1.5 + (1 - cos45) * 2)dp ≈ 0.05dp -->
    <dimen name="card_view_vertical_margin">0.05dp</dimen>
    <!-- 8dp (CardView margin) - (2 * 1.5 + (1 - cos45) * 2)dp - 0.05dp (CardView vertical margin) = 4dp -->
    <dimen name="recycler_view_vertical_padding_for_card_view">4dp</dimen>

    <!-- 36dp (emoticon keyboard header) + 160dp (48dp * 3 three lines of emoticons
    + 8dp * 2 top/bottom padding of emoticon grid) -->
    <dimen name="emoticon_keyboard_height">196dp</dimen>
    <dimen name="emoticon_keyboard_tab_layout_height">36dp</dimen>
    <dimen name="emoticon_keyboard_tab_layout_elevation">1dp</dimen>
    <dimen name="emoticon_padding">8dp</dimen>

    <dimen name="photo_view_crop_width">280dp</dimen>
    <dimen name="photo_view_crop_stroke_width">1dp</dimen>

    <dimen name="dense_text_size_subheader">17sp</dimen>
    <dimen name="dense_text_size_body_1">15sp</dimen>
    <dimen name="dense_text_size_body_2">15sp</dimen>
    <dimen name="dense_text_size_small">15sp</dimen>

    <item name="line_spacing_multiplier" format="float" type="dimen">1.2</item>

