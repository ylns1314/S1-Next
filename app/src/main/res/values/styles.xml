<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CardView.Light">
        <item name="cardBackgroundColor">@color/light_background</item>
    </style>

    <style name="CardView.Dark">
        <item name="cardBackgroundColor">@color/dark_card_view</item>
    </style>

    <style name="CardView.Dark.NightMode.Amoled" parent="CardView">
        <item name="cardBackgroundColor">@android:color/black</item>
    </style>

    <style name="Widget.Design.TabLayout.Keyboard" parent="Widget.Design.TabLayout">
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabIndicatorHeight">0dp</item>
    </style>

    <!-- Dense language scripts that require extra line height to accommodate larger glyphs,
    including Chinese, Japanese, and Korean. -->
    <!-- https://www.google.com/design/spec/style/typography.html -->
    <style name="TextAppearance.AppCompat.Subhead" parent="Base.TextAppearance.AppCompat.Subhead" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_subheader</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1" parent="Base.TextAppearance.AppCompat.Body1" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_body_1</item>
    </style>

    <style name="TextAppearance.AppCompat.Body2" parent="Base.TextAppearance.AppCompat.Body2" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_body_2</item>
    </style>

    <style name="TextAppearance.AppCompat.Small" parent="Base.TextAppearance.AppCompat.Small" tools:ignore="PrivateResource">
        <item name="android:textSize">@dimen/dense_text_size_small</item>
    </style>

    <style name="Animation.Recreate" parent="android:Animation">
        <item name="android:windowExitAnimation">@anim/activity_exit</item>
    </style>

</resources>
